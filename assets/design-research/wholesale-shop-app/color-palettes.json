      },
      {
        "name": "Card Title",
        "size": "16px",
        "weight": 600,
        "line_height": 1.4,
        "letter_spacing": "0px",
        "usage": "Card headers, item titles"
      },
      {
        "name": "Body Large",
        "size": "16px",
        "weight": 400,
        "line_height": 1.5,
        "letter_spacing": "0px",
