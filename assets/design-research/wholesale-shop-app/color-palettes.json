    "button_primary": {
      "background": "#3B82F6",
      "foreground": "#FFFFFF",
      "padding": "10px 16px",
      "border_radius": "6-8px",
      "font_weight": 600,
      "font_size": "14px",
      "hover_bg": "#2563EB",
      "active_bg": "#1D4ED8",
      "transition": "150ms ease-in-out"
    },
    "button_secondary": {
      "background": "transparent",
      "border": "1px #D1D5DB",
      "foreground": "#1F2937",
      "padding": "10px 16px",
      "border_radius": "6-8px",
      "font_weight": 600,
      "hover_bg": "#F3F4F6"
    },
    "input": {
      "border": "1px #D1D5DB",
